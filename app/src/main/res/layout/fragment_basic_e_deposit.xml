<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".Fragments.BasicEDeposit">

    <TextView
        android:id="@+id/deposit_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:text="Deposit money to my H&amp;S Group Account"
        android:textColor="#297545"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:id="@+id/cardview_creditcard"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deposit_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/credit_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/credit_pic" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/credit_depit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:text="Credit/Debit Card"
                android:textColor="#37517E"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/depositbtn_onDebit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/credit_depit_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#297545"
                android:padding="10dp"
                android:text="Deposit Now"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="10dp"
                app:cornerRadius="8dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:id="@+id/cardview_mobilemoney"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_creditcard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/mobilemoney_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/mobile_money" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mobileMoney_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:text="Mobile Money"
                android:textColor="#37517E"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mobilemoney_card_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileMoney_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#297545"
                android:padding="10dp"
                android:text="Deposit Now"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="10dp"
                app:cornerRadius="8dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>